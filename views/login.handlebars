<div>{{{error}}}</div>
{{/if}}
{{#if success}}
<div>{{success}}</div>
{{/if}}
<form action="/login" method="post">
    <div>
        <label>email/username:</label>
        <input type="text" name="username" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>
    <a href='password/forget'>forget password?</a>
    <div class="g-recaptcha" data-sitekey="{{recaptcha}}"></div>
    <div>
        <input type="submit" value="Log In" />
    </div>
</form>
<div>
    <a href='/auth/facebook'><input type="submit" value="Login with Facebook" /></a>
</div>
<div>
    <a href='/auth/google'><input type="submit" value="Login with Google" /></a>
</div>
<div>
    <a href='/signup'><input type="submit" value="Sign Up" /></a>
</div>